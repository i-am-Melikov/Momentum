@model PageNatedList<Brand>
@{
    ViewData["Title"] = "Index";
    int no = 0;
}
<main class="main-content  mt-0">
    <section>
        <div class="page-header min-vh-75">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <!-- Page Heading -->
                        <div class="d-sm-flex justify-content-between mt-4 mb-4">
                            <h1 class="h3 mb-0 text-gray-800">Brand</h1>
                            <a asp-area="manage" asp-controller="brand" asp-action="create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">Create</a>
                        </div>
                        <div class="card mb-4">
                            <div class="card-body px-0 pt-0 pb-2">
                                <div class="table-responsive p-0">
                                    <table class="table align-items-center mb-0" style="padding:20px 20px 0px">
                                        <thead>
                                            <tr>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">No</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Name</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Created At</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Created By</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Settings</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (Brand brand in Model)
                                            {
                                                no++;
                                                <tr>
                                                    <td>@no</td>
                                                    <td>@brand.Name</td>
                                                    <td>@brand.CreatedAt?.ToString("yyyy / MM / dd")</td>
                                                    <td>@brand.CreatedBy</td>
                                                    <td>
                                                        <a class="btn btn-warning" asp-area="manage" asp-controller="brand" asp-action="Update" asp-route-id="@brand.Id">Update</a>
                                                        <a class="btn btn-danger" asp-area="manage" asp-controller="brand" asp-action="Delete" asp-route-id="@brand.Id">Delete</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="pagination-wrapper pagination-wraapper-blog">
                            <nav class="pagination d-flex justify-content-center align-items-center">
                                <ul class="pagination">
                                    @if (Model.HasPrev)
                                    {
                                        <li class="page-item"><a class="page-link" asp-area="manage" asp-controller="brand" asp-action="index" asp-route-currentPage="@(Model.CurrentPage-1)"><i class="fa-solid fa-arrow-left-long"></i></a></li>
                                    }
                                    @for (int i = Model.Start; i <= Model.End; i++)
                                    {
                                        <li class="page-item @(Model.CurrentPage == i ? "active" : "") "><a class="page-link" style="background:none;" asp-area="manage" asp-controller="brand" asp-action="index" asp-route-currentPage="@i">@i</a></li>
                                    }
                                    @if (Model.HasNext)
                                    {
                                        <li class="page-item"><a class="page-link" asp-area="manage" asp-controller="brand" asp-action="index" asp-route-currentPage="@(Model.CurrentPage+1)"><i class="fa-solid fa-arrow-right-long"></i></a></li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>