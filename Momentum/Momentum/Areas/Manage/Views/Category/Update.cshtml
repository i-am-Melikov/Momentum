@model Category
@{
    ViewData["Title"] = "Update";
}

<main class="main-content mt-0">
    <section>
        <div class="page-header min-vh-75">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <!-- Page Heading -->
                        <div class="d-sm-flex justify-content-between mt-4 mb-4">
                            <h1 class="h3 mb-0 text-gray-800">Create Category</h1>
                        </div>
                        <div class="card mt-4 mb-4">
                            <div class="row">
                                <div class="col-lg-8">
                                    <form method="post" enctype="multipart/form-data">
                                        <div class="form-group"
                                            <label asp-for="Name"></label>
                                            <input asp-for="Name" class="form-control" placeholder="Name">
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        <div class="form-group"
                                            <label asp-for="MainFile"></label>
                                            <input asp-for="MainFile" accept="image/*" class="form-control">
                                            <span asp-validation-for="MainFile" class="text-danger"></span>
                                        </div>
                                        <a asp-area="manage" asp-controller="category" asp-action="index" class="btn btn-primary">Go Home</a>
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>