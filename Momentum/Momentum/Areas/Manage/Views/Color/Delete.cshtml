@model Color
@{
    ViewData["Title"] = "Delete";
}
<main class="main-content mt-0">
    <section>
        <div class="page-header min-vh-75">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <!-- Page Heading -->
                        <div class="d-sm-flex justify-content-between mt-4 mb-4">
                            <h1 class="h3 mb-0 text-gray-800">Delete Color</h1>
                        </div>
                        <div class="card mt-4 mb-4">
                            <div class="row">
                                <div class="col-lg-8">
                                    <table class="table align-items-center mb-0" style="padding:20px 20px 20px">
                                        <thead>
                                            <tr>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Id</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Title</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Product Count</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Created At</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Created By</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>@Model.Id</td>
                                                <td>@Model.Title</td>
                                                <td>@Model.ProductColors.Count</td>
                                                <td>@Model.CreatedAt?.ToString("yyyy / MM / dd")</td>
                                                <td>@Model.CreatedBy</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <a asp-area="manage" asp-controller="color" asp-action="index" class="btn btn-primary">Go Home</a>
                                    <a asp-area="manage" asp-controller="color" asp-action="DeleteColor" asp-route-id="@Model.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this color?')">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>