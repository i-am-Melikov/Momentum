@model List<Setting>
@{
    ViewData["Title"] = "Index";
    int no = 0;
}

<main class="main-content  mt-0">
    <section>
        <div class="page-header min-vh-75">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="card mb-4">
                            <div class="pt-3 pb-0">
                                <h6>Setting</h6>
                            </div>
                            <div class="card-body px-0 pt-0 pb-2">
                                <div class="table-responsive p-0">
                                    <table class="table align-items-center mb-0">
                                        <thead>
                                            <tr>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">No</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Key</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Value</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Setting</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach(Setting setting in Model)
                                            {
                                                no++;
                                                <tr>
                                                    <td>@no</td>
                                                    <td>
                                                        <p class="text-xs font-weight-bold mb-0">@Html.Raw(setting.Key)</p>
                                                    </td>
                                                    <td>
                                                        <p class="text-xs font-weight-bold mb-0">@Html.Raw(setting.Value)</p>
                                                    </td>
                                                    <td class="align-middle">
                                                        <a asp-area="manage" asp-controller="setting" asp-action="update" asp-route-id="@setting.Id" class="text-xs font-weight-bold btn btn-warning">Update</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>