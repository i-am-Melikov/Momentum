@model PageNatedList<AppUser>
@{
    ViewData["Title"] = "Index";
}

<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header pb-0">
                        <h6>Users table</h6>
                    </div>
                    <div class="card-body px-0 pt-0 pb-2">
                        <div class="table-responsive p-0">
                            <table class="table align-items-center mb-0">
                                <thead>
                                    <tr>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">No</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Author</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Role</th>
                                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Settings</th>
                                    </tr>
                                </thead>
                                <tbody class="listContainer">
                                    @await Html.PartialAsync("_UserSettingsPartial", Model)
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="pagination-wrapper pagination-wraapper-blog">
                    <nav class="pagination d-flex justify-content-center align-items-center">
                        <ul class="pagination">
                            @if (Model.HasPrev)
                            {
                                <li class="page-item"><a class="page-link" asp-area="manage" asp-controller="user" asp-action="index" asp-route-currentPage="@(Model.CurrentPage-1)"><i class="fa-solid fa-arrow-left-long"></i></a></li>
                            }
                            @for (int i = Model.Start; i <= Model.End; i++)
                            {
                                <li class="page-item @(Model.CurrentPage == i ? "active" : "") "><a class="page-link" style="background:none;" asp-area="manage" asp-controller="user" asp-action="index" asp-route-currentPage="@i">@i</a></li>
                            }
                            @if (Model.HasNext)
                            {
                                <li class="page-item"><a class="page-link" asp-area="manage" asp-controller="user" asp-action="index" asp-route-currentPage="@(Model.CurrentPage+1)"><i class="fa-solid fa-arrow-right-long"></i></a></li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</main>