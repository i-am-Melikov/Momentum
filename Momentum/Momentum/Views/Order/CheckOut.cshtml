@model OrderVM
@{
    ViewData["Title"] = "CheckOut";
}
<style>
    .form-control {
        color: #838383 !important;
    }
</style>
<main id="MainContent" class="content-for-layout home-wrapper">

    <div class="shopify-section">
        <section class="common-banner-section">
            <div class="container">
                <div class="col-md-5 col-12 ">
                    <div class="common-banner-content">
                        <a href="javascript:history.go(-1)" class="back-btn">
                            <span class="svg-ic">
                                <svg xmlns="http://www.w3.org/2000/svg" width="11" height="5" viewBox="0 0 11 5" fill="none">
                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M10.5791 2.28954C10.5791 2.53299 10.3818 2.73035 10.1383 2.73035L1.52698 2.73048L2.5628 3.73673C2.73742 3.90636 2.74146 4.18544 2.57183 4.36005C2.40219 4.53467 2.12312 4.53871 1.9485 4.36908L0.133482 2.60587C0.0480403 2.52287 -0.000171489 2.40882 -0.000171488 2.2897C-0.000171486 2.17058 0.0480403 2.05653 0.133482 1.97353L1.9485 0.210321C2.12312 0.0406877 2.40219 0.044729 2.57183 0.219347C2.74146 0.393966 2.73742 0.673036 2.5628 0.842669L1.52702 1.84888L10.1383 1.84875C10.3817 1.84874 10.5791 2.04609 10.5791 2.28954Z" fill="white"></path>
                                </svg>
                            </span>
                            Back to Home
                        </a>
                        <div class="section-title">
                            <h2>My Profile</h2>
                        </div>
                        <p> Welcome to your profile account! This is your personal space where you have full control over your account settings. Explore the following features to manage your account effortlessly...</p>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="container" style="padding:200px 0px 200px">
        <div class="row">
            <div class="col-md-6">
                <div class="checkout-form">
                    @await Html.PartialAsync("_CheckOutPartial",Model.Order)
                </div>
            </div>
            <div class="col-md-4">
                <div class="checkout-total-wrapper mt-30">
                    <h4 style="margin-bottom:30px;" class="allup-title">Cart Total</h4>
                    <div class="checkout-total mt-30">
                        <h4 class="title">Products:</h4>
                        <ul>
                            @foreach (BasketVM basketVM in Model.BasketVMs)
                            {
                                <li style="display: flex; justify-content: space-between; align-items: center;">
                                    <img src="~/assets/img/product/@basketVM.Image" style="width:100px;">
                                    <p class="total-value">@basketVM.Title X @basketVM.Count</p>
                                    <p class="total-amount">$@((basketVM.Price * basketVM.Count).ToString("#.##"))</p>
                                </li>
                            }
                        </ul>
                        <div class="checkout-total-sub" style="margin-top:30px; display:flex; justify-content: space-between; align-items: center;">
                            <p class="total-value">Sub Total:</p>
                            <p class="total-amount">$@Model.BasketVMs.Sum(b=>b.Price * b.Count).ToString("#.##")</p>
                        </div>
                        <h4 class="title mt-15" style="float:left; margin-top:40px;">Product:  <span>$@Model.BasketVMs.Sum(b=>b.Price * b.Count).ToString("#.##")</span></h4>
                    </div>
                    <div class="checkout-btn row align-items-center" style="margin-top:30px; float-right;">
                        <div class="col-lg-12 col-12">
                            <button form="checkoutform" class="btn submit-btn">
                                Place Order
                                <svg xmlns="http://www.w3.org/2000/svg" width="35" height="14" viewBox="0 0 35 14" fill="none">
                                    <path d="M25.0749 14L35 7L25.0805 0L29.12 6.06667H0V7.93333H29.12L25.0749 14Z"></path>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>



</main>