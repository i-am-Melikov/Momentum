@model IEnumerable<BasketVM>
<div class="shopify-section cart__items-wrapper col-lg-9 col-12">
    <cart-items class="">
        <form action="/cart" class="cart__contents critical-hidden" method="post" id="cart">
            <div id="main-cart-items">
                <div class="js-contents order-historycontent">
                    <table class="cart-tble">
                        <thead>
                            <tr>
                                <th colspan="1" scope="col">IMAGE</th>
                                <th colspan="1" scope="col">NAME</th>
                                <th colspan="1" scope="col">PRICE</th>
                                <th colspan="1" scope="col">QUANTITY</th>
                                <th colspan="1" scope="col">TOTAL</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (BasketVM basketVM in Model)
                            {
                                <tr class="cart-item" id="CartItem-1">
                                    <td class="cart-item__media" data-label="Product">
                                        <a asp-controller="product" asp-action="detail" asp-route-id="@basketVM.Id">
                                            <img src="~/assets/img/product/@basketVM.Image">
                                        </a>
                                    </td>
                                    <td data-label="Name">
                                        <a asp-controller="product" asp-action="detail" asp-route-id="@basketVM.Id" class="cart-item__name">@basketVM.Title</a>
                                        <dl>
                                            <div class="product-option">
                                                <dt>Color:</dt>
                                                <dd>@basketVM.Color</dd>
                                            </div>
                                        </dl>
                                        <p class="product-option"></p><ul class="discounts list-unstyled" role="list" aria-label="Discount"></ul>
                                    </td>
                                    <td data-label="cart-price">
                                        @basketVM.Price <span class="currency-type">USD</span>
                                    </td>
                                    <td class="cart-item__quantity" data-label="quantity">
                                        <div class="cart-item__quantity-wrapper">
                                            <label class="visually-hidden" for="Quantity-1">Quantity</label>
                                            <div class="qty-spinner quantity" style="align-items:center; color:black;">
                                                <button class="quantity-decrement quantity__button no-js-hidden" name="minus" type="button">
                                                    <span class="visually-hidden">Decrease quantity for Alienware Gameing Monitor T 45</span>
                                                    <svg width="12" height="2" viewBox="0 0 12 2" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                        <path d="M0 0.251343V1.74871H12V0.251343H0Z" fill="#61AFB3"></path>
                                                    </svg>
                                                </button>
                                                <input class="quantity__input" type="number" name="updates[]" value="@basketVM.Count" min="0" aria-label="@basketVM.Title" id="Quantity-1">
                                                <button class="quantity-increment quantity__button no-js-hidden" name="plus" type="button">
                                                    <span class="visually-hidden">Increase quantity for Alienware Gameing Monitor T 45</span>
                                                    <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                        <path d="M6.74868 5.25132V0H5.25132V5.25132H0V6.74868H5.25132V12H6.74868V6.74868H12V5.25132H6.74868Z" fill="#61AFB3"></path>
                                                    </svg>
                                                </button>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="cart-item__totals right " data-label="Total">
                                        <div class="cart-item__price-wrapper">
                                            <span class="price--end">
                                                @(basketVM.Price * basketVM.Count) <span class="currency-type">USD</span>
                                            </span>
                                        </div>
                                        <div id="Remove-1" class="remove-btn" data-index="1">
                                            <a class="remove_item" data-item-id="@basketVM.Id" onclick="reloadPage()">
                                                <svg width="20" height="20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" aria-hidden="true" focusable="false" role="presentation" class="icon icon-remove">
                                                    <path d="M14 3h-3.53a3.07 3.07 0 00-.6-1.65C9.44.82 8.8.5 8 .5s-1.44.32-1.87.85A3.06 3.06 0 005.53 3H2a.5.5 0 000 1h1.25v10c0 .28.22.5.5.5h8.5a.5.5 0 00.5-.5V4H14a.5.5 0 000-1zM6.91 1.98c.23-.29.58-.48 1.09-.48s.85.19 1.09.48c.20.24.30.6.36 1.02h-2.9c.05-.42.17-.78.36-1.02zm4.84 11.52h-7.5V4h7.5v9.5z" fill="currentColor"></path>
                                                    <path d="M6.55 5.25a.5.5 0 00-.5.5v6a.5.5 0 001 0v-6a.5.5 0 00-.5-.5zM9.45 5.25a.5.5 0 00-.5.5v6a.5.5 0 001 0v-6a.5.5 0 00-.5-.5z" fill="currentColor"></path>
                                                </svg>
                                            </a>
                                        </div>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </form>
    </cart-items>
</div>
<div class="shopify-section cart__footer-wrapper col-lg-3 col-12">
    <div class="" id="main-cart-footer">
        <div class="cart__footer">
            <div class="cart__blocks">
                <div class="js-contents">
                    <div class="totals">
                        <h3 class="totals__subtotal">Subtotal</h3>
                        <p class="totals__subtotal-value">@Model.Sum(m => m.Count * m.Price ) <span class="currency-type">USD</span></p>
                    </div>
                </div>
                <div class="cart__ctas">
                    <a asp-controller="order" asp-action="CheckOut" type="submit" id="checkout" class="cart__checkout-button btn" name="checkout" form="cart">
                        Proceed to checkout
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>