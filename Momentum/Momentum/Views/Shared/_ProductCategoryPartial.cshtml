@model IEnumerable<Product>
@foreach (Product product in Model)
{
    <div class="product-card">
        <div class="product-card-inner card-inner">
            <h4 class="product-title">
                <a href="product-detail.html">@product.Title</a>
            </h4>

            <div class="product-card-image">
                <div class="product-card-image card__media">
                    <a href="product-detail.html" class="product__media-item">
                        <img src="~/assets/img/product/@product.MainImage" alt="@product.Title">
                    </a>
                    <div class="pro_btn">
                        <div class="pro_btn_wrapper">
                            <a class="wishlist wish heart" href="wishlist.html" title="Wishlist">
