@model ProfileAccountVM
<div class="section-title">
    <h2>Profile form</h2>
</div>
<form id="ContactForm" class="contact-form" method="post" asp-controller="Account" asp-action="ProfileAccount">
    <div style="margin-bottom:10px; font-size:20px;">Account Details:</div>
    <div class="row">
        <div class="col-md-6 col-12">
            <div class="form-group">
                <label asp-for="Name">First name<sup>*</sup>:</label>
                <input asp-for="Name" class="form-control" type="text" placeholder="First name" required>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6 col-12">
            <div class="form-group">
                <label asp-for="SurName">Last name<sup>*</sup>:</label>
                <input asp-for="SurName" class="form-control" type="text" placeholder="Last name" required>
                <span asp-validation-for="SurName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6 col-12">
            <div class="form-group">
                <label asp-for="UserName">User name<sup>*</sup>:</label>
                <input asp-for="UserName" class="form-control" type="text" placeholder="User name" required>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6 col-12">
            <div class="form-group">
                <label asp-for="Email">Email<sup>*</sup>:</label>
                <input asp-for="Email" class="form-control" type="email" placeholder="shop@company.com" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div style="margin-bottom:10px; font-size:20px;">Password Change:</div>
    <div class="row">
        <div class="col-md-12 col-12">
            <div class="form-group">
                <label asp-for="CurrentPassword">Current Password<sup>*</sup>:</label>
                <input asp-for="CurrentPassword" class="form-control" type="password" placeholder="Current Password">
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6 col-12">
            <div class="form-group">
                <label asp-for="NewPassword">New Password<sup>*</sup>:</label>
                <input asp-for="NewPassword" class="form-control" type="password" placeholder="New Password">
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6 col-12">
            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password<sup>*</sup>:</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row align-items-center">
        <div class="col-lg-4 col-12">
            <button type="submit" class="btn submit-btn">
                Save Changes
                <svg xmlns="http://www.w3.org/2000/svg" width="35" height="14" viewBox="0 0 35 14" fill="none">
                    <path d="M25.0749 14L35 7L25.0805 0L29.12 6.06667H0V7.93333H29.12L25.0749 14Z"></path>
                </svg>
            </button>
        </div>
    </div>
</form>