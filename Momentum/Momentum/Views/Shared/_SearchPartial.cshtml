@model IEnumerable<Product>

@foreach (Product product in Model)
{
    <a class="d-block" asp-controller="product" asp-action="detail" asp-route-id="@product.Id" style="margin:15px 0px;">
        <li class="d-flex justify-content-between align-items-center">
            <img style="width:100px" src="/assets/img/product/@product.MainImage"/>
            <p class="search-product-title">@product.Title</p>
            @if (product.DiscountedPrice != null && product.DiscountedPrice > 0)
            {
                <span class="price-sale">@product.DiscountedPrice <b>USD</b></span>
            }
            else
            {
                <span class="price-sale">@product.Price <b>USD</b></span>
            }
        </li>
    </a>
}